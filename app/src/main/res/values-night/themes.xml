<resources>
    <!-- Base application theme. -->
    <style name="Theme.STC" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
    </style>

    <style name="AlertDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/rippleColor</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

</resources>