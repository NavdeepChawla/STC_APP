<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">


    <androidx.cardview.widget.CardView
        android:id="@+id/stcImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/contentDescription"
            app:srcCompat="@drawable/ic_stc_white" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/student"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/stcImage"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/stcImage"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center_vertical"
        android:text="Student\nTechnical\nCommunity"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stcImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stcImage"
        app:layout_constraintTop_toTopOf="@+id/stcImage"
        app:layout_constraintVertical_bias="0.75" />

    <LinearLayout
        android:id="@+id/socialInfoLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stcImage">

        <Button
            android:id="@+id/button_linkedin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:hapticFeedbackEnabled="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_linkedin"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

        <Button
            android:id="@+id/button_medium"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:hapticFeedbackEnabled="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_medium"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/socialInfoLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialInfoLayout1">

        <Button
            android:id="@+id/button_facebook"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:hapticFeedbackEnabled="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_facebook"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />


        <Button
            android:id="@+id/button_instagram"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:hapticFeedbackEnabled="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_instagram"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

    </LinearLayout>

    <TabHost
        android:id="@+id/infoTabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/socialInfoLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:elevation="4dp"
            style="@style/BottomNavigationViewTitle"
            android:background="@drawable/info_tab_bg"
            android:padding="4dp"
            android:hapticFeedbackEnabled="true"
            />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/infoTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    app:cardCornerRadius="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/information"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/gray"
                        android:textSize="16dp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/infoPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/infoPrivacyPolicy"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/gray"
                        android:textSize="16dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoTab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cViewPresident"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rPresident"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/photoPresident"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_margin="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="2dp"
                            app:cardCornerRadius="8dp"
                            android:layout_centerVertical="false">

                        <ImageView
                            android:id="@+id/infoImagePresident"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/contentDescription"
                            android:src="@drawable/ic_president"
                            tools:ignore="TooDeepLayout" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/namePresident"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="JATIN MAHAJAN"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/photoPresident"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/postPresident"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/namePresident"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="President"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoPresident"
                            app:layout_constraintTop_toBottomOf="@id/namePresident" />

                        <Button
                            android:id="@+id/linkedinPresident"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/postPresident"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:drawableStart="@drawable/ic_linkedin"
                            android:drawableTint="@color/link_blue"
                            android:textColor="@color/link_blue"
                            android:textAllCaps="false"
                            app:layout_constraintStart_toEndOf="@+id/photoPresident"
                            app:layout_constraintTop_toBottomOf="@id/postPresident"
                            android:text="\@Jatin Mahajan" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cViewTechHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rTechHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/photoTechHead"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_margin="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="2dp"
                            app:cardCornerRadius="8dp"
                            android:layout_centerVertical="false">

                            <ImageView
                                android:id="@+id/infoImageTechHead"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/contentDescription"
                                android:src="@drawable/ic_tech_lead"
                                tools:ignore="TooDeepLayout" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/nameTechHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="SHREY SINDHER"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/photoTechHead"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/postTechHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/nameTechHead"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Tech Head"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoTechHead"
                            app:layout_constraintTop_toBottomOf="@id/nameTechHead" />

                        <Button
                            android:id="@+id/linkedinTechHead"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/postTechHead"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:drawableStart="@drawable/ic_linkedin"
                            android:drawableTint="@color/link_blue"
                            android:textColor="@color/link_blue"
                            android:textAllCaps="false"
                            app:layout_constraintStart_toEndOf="@+id/photoTechHead"
                            app:layout_constraintTop_toBottomOf="@id/postTechHead"
                            android:text="\@Shrey Sindher" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cViewProjectLead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:background="@color/cardColor"
                        android:backgroundTint="@color/cardColor"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rProjectLead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/photoProjectLead"
                                android:layout_width="96dp"
                                android:layout_height="96dp"
                                android:layout_margin="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:padding="2dp"
                                app:cardCornerRadius="8dp"
                                android:layout_centerVertical="false">

                                <ImageView
                                    android:id="@+id/infoImageProjectLead"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/contentDescription"
                                    android:src="@drawable/ic_project_head"
                                    tools:ignore="TooDeepLayout" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/nameProjectLead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="UJJWAL SINHA"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@+id/photoProjectLead"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/postProjectLead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/nameProjectLead"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Project Lead"
                                android:textColor="@color/gray"
                                android:textSize="16dp"
                                app:layout_constraintStart_toEndOf="@+id/photoProjectLead"
                                app:layout_constraintTop_toBottomOf="@id/nameProjectLead" />

                            <Button
                                android:id="@+id/linkedinProjectLead"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@id/postProjectLead"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:textSize="16dp"
                                android:drawableStart="@drawable/ic_linkedin"
                                android:drawableTint="@color/link_blue"
                                android:textColor="@color/link_blue"
                                android:textAllCaps="false"
                                app:layout_constraintStart_toEndOf="@+id/photoProjectLead"
                                app:layout_constraintTop_toBottomOf="@id/postProjectLead"
                                android:text="\@Ujjwal Sinha" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                         android:id="@+id/cViewTechMentor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:background="@color/cardColor"
                        android:backgroundTint="@color/cardColor"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        tools:ignore="DuplicateIds">


                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rTechMentor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/photoTechMentor"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_margin="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:padding="2dp"
                        app:cardCornerRadius="8dp"
                        android:layout_centerVertical="false">

                        <ImageView
                            android:id="@+id/infoImageTechMentor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/contentDescription"
                            android:src="@drawable/ic_tech_mentor"
                            tools:ignore="TooDeepLayout" />

                    </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/nameTechMentor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="MUKUNDH B."
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/photoTechMentor"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/postTechMentor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/nameTechMentor"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Tech Mentor"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoTechMentor"
                            app:layout_constraintTop_toBottomOf="@id/nameTechMentor" />

                        <Button
                            android:id="@+id/linkedinTechMentor"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/postTechMentor"
                            android:layout_marginTop="4dp"
                            android:layout_weight="1"
                            android:textSize="16dp"
                            android:drawableStart="@drawable/ic_linkedin"
                            android:drawableTint="@color/link_blue"
                            android:textColor="@color/link_blue"
                            android:textAllCaps="false"
                            app:layout_constraintStart_toEndOf="@+id/photoTechMentor"
                            app:layout_constraintTop_toBottomOf="@id/postTechMentor"
                            android:text="\@Mukundh Bhushan" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cViewMgmtLead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rMgmtLead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/photoMgmtLead"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_margin="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:padding="2dp"
                            app:cardCornerRadius="8dp"
                            android:layout_centerVertical="false">

                            <ImageView
                                android:id="@+id/infoImageMgmtLead"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/contentDescription"
                                android:src="@drawable/ic_mgmt_lead"
                                tools:ignore="TooDeepLayout" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/nameMgmtLead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="MAYANK YADAV"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/photoMgmtLead"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/postMgmtLead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/nameMgmtLead"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Management Lead"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoMgmtLead"
                            app:layout_constraintTop_toBottomOf="@id/nameMgmtLead" />

                        <Button
