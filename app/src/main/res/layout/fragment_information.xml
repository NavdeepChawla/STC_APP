<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color">


    <androidx.cardview.widget.CardView
        android:id="@+id/stcImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/contentDescription"
            app:srcCompat="@drawable/ic_stc_white" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/student"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/stcImage"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/stcImage"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center_vertical"
        android:text="Student\nTechnical\nCommunity"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stcImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stcImage"
        app:layout_constraintTop_toTopOf="@+id/stcImage"
        app:layout_constraintVertical_bias="0.75" />

    <LinearLayout
        android:id="@+id/socialInfoLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stcImage">

        <Button
            android:id="@+id/button_linkedin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_linkedin"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

        <Button
            android:id="@+id/button_medium"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_medium"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/socialInfoLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialInfoLayout1">

        <Button
            android:id="@+id/button_facebook"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_facebook"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />


        <Button
            android:id="@+id/button_instagram"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:background="@color/background_color"
            android:drawableStart="@drawable/ic_instagram"
            android:drawableTint="@color/black"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

    </LinearLayout>

    <TabHost
        android:id="@+id/infoTabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/socialInfoLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:elevation="4dp"
            android:background="@drawable/info_tab_bg"
            android:padding="4dp"
            android:hapticFeedbackEnabled="true"
            />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/infoTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Information About MSTC"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoTab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cViewPresident"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rPresident"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/photoPresident"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_centerVertical="false"
                            android:layout_margin="4dp"
                            android:contentDescription="@string/contentDescription"
                            android:padding="4dp"
                            android:src="@drawable/sample_fill_image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/namePresident"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="NAME"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/photoPresident"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/postPresident"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/namePresident"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="PRESIDENT"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoPresident"
                            app:layout_constraintTop_toBottomOf="@id/namePresident" />

                        <TextView
                            android:id="@+id/domainPresident"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/postPresident"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="DOMAIN"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoPresident"
                            app:layout_constraintTop_toBottomOf="@id/postPresident" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cViewTechHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/cardColor"
                    android:backgroundTint="@color/cardColor"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rTechHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/photoTechHead"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:layout_centerVertical="false"
                            android:layout_margin="4dp"
                            android:contentDescription="@string/contentDescription"
                            android:padding="4dp"
                            android:src="@drawable/sample_fill_image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nameTechHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="NAME"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/photoTechHead"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/postTechHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/nameTechHead"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="PRESIDENT"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoTechHead"
                            app:layout_constraintTop_toBottomOf="@id/nameTechHead" />

                        <TextView
                            android:id="@+id/domainTechHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/postTechHead"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="DOMAIN"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            app:layout_constraintStart_toEndOf="@+id/photoTechHead"
                            app:layout_constraintTop_toBottomOf="@id/postTechHead" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </FrameLayout>
        </LinearLayout>
    </TabHost>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>