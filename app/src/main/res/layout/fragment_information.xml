<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEFF8">


    <androidx.cardview.widget.CardView
        android:id="@+id/stcImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/contentDescription"
            app:srcCompat="@drawable/ic_stc_white" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/student"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/stcImage"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/stcImage"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center_vertical"
        android:text="Student\nTechnical\nCommunity"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/stcImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stcImage"
        app:layout_constraintTop_toTopOf="@+id/stcImage"
        app:layout_constraintVertical_bias="0.75" />

    <LinearLayout
        android:id="@+id/socialInfoLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stcImage">

        <Button
            android:id="@+id/button_linkedin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#EBEFF8"
            android:drawableStart="@drawable/ic_linkedin"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

        <Button
            android:id="@+id/button_medium"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="#EBEFF8"
            android:drawableStart="@drawable/ic_medium"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/socialInfoLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socialInfoLayout1">

        <Button
            android:id="@+id/button_facebook"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#EBEFF8"
            android:drawableStart="@drawable/ic_facebook"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />


        <Button
            android:id="@+id/button_instagram"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="#EBEFF8"
            android:drawableStart="@drawable/ic_instagram"
            android:padding="8dp"
            android:text="\@MSTC_VIT" />

    </LinearLayout>

    <TabHost
        android:id="@+id/infoTabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/socialInfoLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:hapticFeedbackEnabled="true"
            android:background="@drawable/info_tab_bg"
            android:padding="2dp" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/infoTab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Information About MSTC"
                        android:layout_gravity="center"
                        android:textAlignment="center"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/infoTab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="0dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="8dp">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_color">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true"
                            android:id="@+id/cViewPresident">


                            <RelativeLayout
                                android:id="@+id/rPresident"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/photoPresident"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="false"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/sample_fill_image" />

                                <TextView
                                    android:id="@+id/namePresident"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@id/photoPresident"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="NAME"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/postPresident"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/namePresident"
                                    android:layout_alignLeft="@id/namePresident"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="PRESIDENT"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/domainPresident"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/postPresident"
                                    android:layout_alignLeft="@id/postPresident"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="DOMAIN"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cViewProjectLead"
                            android:layout_below="@id/cViewPresident"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true"
                            >

                            <RelativeLayout
                                android:id="@+id/rProjectLead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/photoProLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/sample_fill_image" />

                                <TextView
                                    android:id="@+id/nameProLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@id/photoProLead"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="NAME"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/postProLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nameProLead"
                                    android:layout_alignLeft="@id/nameProLead"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="PROJECT LEAD"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/domainProLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/postProLead"
                                    android:layout_alignLeft="@id/nameProLead"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="DOMAIN"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cViewTechMentor"
                            android:layout_below="@id/cViewProjectLead"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true">


                            <RelativeLayout
                                android:id="@+id/rTechMentor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/photoTechMentor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/sample_fill_image" />

                                <TextView
                                    android:id="@+id/nameTechMentor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@id/photoTechMentor"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="NAME"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/postTechMentor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nameTechMentor"
                                    android:layout_alignLeft="@id/nameTechMentor"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="TECH MENTOR"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/domainTechMentor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/postTechMentor"
                                    android:layout_alignLeft="@id/nameTechMentor"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="DOMAIN"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cViewManageLead"
                            android:layout_below="@id/cViewTechMentor"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/rManageLead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/photoManageLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/sample_fill_image" />

                                <TextView
                                    android:id="@+id/nameManageLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@id/photoManageLead"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="NAME"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/postManageLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nameManageLead"
                                    android:layout_alignLeft="@id/nameManageLead"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="MANAGEMENT LEAD"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/domainManageLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/postManageLead"
                                    android:layout_alignLeft="@id/nameManageLead"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="DOMAIN"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cViewFinanceLead"
                            android:layout_below="@id/cViewManageLead"
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="3dp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:id="@+id/rFinanceLead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/photoFinanceLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/sample_fill_image" />

                                <TextView
                                    android:id="@+id/nameFinanceLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@id/photoFinanceLead"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="NAME"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/postFinanceLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nameFinanceLead"
                                    android:layout_alignLeft="@id/nameFinanceLead"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="FINANCE LEAD"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/domainFinanceLead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/postFinanceLead"
                                    android:layout_alignLeft="@id/nameFinanceLead"
                                    android:layout_marginTop="7dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="DOMAIN"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>
                    </androidx.core.widget.NestedScrollView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </FrameLayout>
        </LinearLayout>
    </TabHost>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>