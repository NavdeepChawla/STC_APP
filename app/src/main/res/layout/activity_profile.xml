<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="PROFILE"
                android:textColor="@color/black"
                android:textSize="28dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textView9"
            android:visibility="invisible">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/appBarProfilePicture"
                android:layout_width="172dp"
                android:layout_height="172dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/black"
                app:civ_shadow_radius="2dp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/userName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_text"                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="STC Member"
                android:textColor="#332CAB"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appBarProfilePicture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:hint="Anonymous Anonymous"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/userRegNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:hint="12BIT2020"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/domain_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:hint="stcuser1234@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="18dp" />

            <Button
                android:id="@+id/resetButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/userEmail"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="64dp"
                android:background="@drawable/btn_bg"
                android:text="Logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phone_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userRegNo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:hint="94313xxx67"
                android:inputType="phone"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/room_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:hint="P-456"
                android:inputType="textPersonName"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/domain_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:hint="Management"
                android:textSize="18dp" />

        </RelativeLayout>


        </RelativeLayout>

    </ScrollView>
