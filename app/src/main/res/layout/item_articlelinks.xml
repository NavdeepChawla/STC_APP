<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/resarticles_cardview"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/articlelink_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="sample"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/articlelink_title"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/articlelink_desc"
            android:text="Sample line goes here"/>


        <TextView
            android:id="@+id/articlelink_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/articlelink_desc"
            android:textColor="@color/link_blue"
            android:text="//https.bitly.linkgoeshere.com"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>