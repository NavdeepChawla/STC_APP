<resources>
    <style name="Theme.STC" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
    </style>

    <style name="heading1" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>

    </style>


    <style name="AlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/rippleColor</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>
</resources>